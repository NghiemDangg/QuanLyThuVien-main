<script>
      function format(inputDate1, id) {
        inputDate = new Date(inputDate1)
        let date, month, year;

        date = inputDate.getDate();
        month = inputDate.getMonth() + 1;
        year = inputDate.getFullYear();

          date = date
              .toString()
              .padStart(2, '0');

          month = month
              .toString()
              .padStart(2, '0');

        let day = `${date}/${month}/${year}`;
        document.getElementById(id).innerText = day
      }
    </script>

<main>
      <div class="container">
        <div class="content-header">
          <h1 class="heading">Tra Cứu Phiếu Mượn</h1>
          <div class="d-flex justify-content-between">
            <div class="search-bar">
              <input type="text" />
              <button class="search-btn"><i class="bi bi-search"></i></button>
            </div>

            <a href="/create/callcard">
              <div
                class="createUser-btn d-flex justify-content-evenly align-items-center"
              >
                <i class="bi bi-bookmark-plus"></i>
                <div class="title">Tạo Phiếu Mượn</div>
              </div>
            </a>
          </div>
        </div>

        <div class="table-responsive">
          <table class="table table-dark table-striped">
            <thead>
              <tr>
                <th scope="col">Mã Phiếu Mượn</th>
                <th scope="col">Mã Đọc Giả</th>
                <th scope="col">Ngày Mượn</th>
                <th scope="col">Ngày Trả</th>
                <th scope="col">Tiền Phạt</th>
                <th scope="col">Ghi Chú</th>
              </tr>
            </thead>
            <tbody>
                {{#each ccdata}}
                  <tr class="">
                    <td scope="row">{{idCard}}</td>
                    <td>{{userid}}</td>
                    <td id="brDay{{@index}}"> <script>format('{{borrowDate}}', 'brDay{{@index}}')</script> </td>
                    <td id="rtDay{{@index}}"> <script>format('{{returnDate}}', 'rtDay{{@index}}')</script> </td>
                    <td>{{fine}}</td>
                    <td>{{#if note}}
                            {{note}}
                        {{else}}
                            Không có ghi chú
                        {{/if}}
                    </td>
                  </tr>
                {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </main>
    